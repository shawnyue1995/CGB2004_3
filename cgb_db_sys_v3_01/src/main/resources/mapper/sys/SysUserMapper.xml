<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cy.pj.sys.dao.SysUserDao">
    <!--sql中的共性-->
    <sql id="queryWhereId">
        from sys_users
        <where>
            <if test="username!=null and username!=''">
                username like concat("%",#{username},"%")
            </if>
        </where>
    </sql>
    <!--按条件统计记录总数-->
    <select id="getRowCount" resultType="int">
        select count(*)
        <include refid="queryWhereId"/>
    </select>
    <select id="findPageObjects" resultMap="sysUserDept">
        select *
        <include refid="queryWhereId"/>
        order by createdTime desc
        limit #{startIndex},#{pageSize}
    </select>
    <resultMap id="sysUserDept" type="com.cy.pj.sys.pojo.SysUserDept">
        <!--一般应用many2one或one2one做关联查询在当前应用是基于deptId查询部门信息并将其
        存储到SysUserDept对象的sysDept属性中-->
        <association property="sysDept" column="deptId"
                     select="com.cy.pj.sys.dao.SysDeptDao.findById">
        </association>
    </resultMap>
    <update id="validById">
        update sys_users
       set valid=#{valid},
           modifiedUser=#{modifiedUser},
           modifiedTime=now()
       where id=#{id}
    </update>
</mapper>